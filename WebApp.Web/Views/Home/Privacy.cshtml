<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
</head>


<div class="container">    
    <div class="row">
        <div class="col p-0 m-0" style="width:300px">
            @await Html.PartialAsync("_NavBarPartial")
        </div>

        <div class="col p-0 m-0" style="background-color: white">

            <nav class="navbar p-0 m-0 justify-content-center d-flex bd-highlight sticky-top" id="centerNav">
                <form class="form-inline mt-2 bd-highlight">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search events" id="searchForm">
                        <div class="input-group-append">
                            <button class="btn" id="searching">
                                <img src="~/images/homepage/icons8-search-48.png" style="width: 2vw" />
                            </button>
                        </div>
                    </div>
                </form>

                <button type="button" class="btn btn-outline-info mb-2 bd-highlight" data-toggle="modal" data-target="#exampleModalCenter" style="margin-left: 4rem">
                    Create Event
                </button>

                <button type="button" class="btn btn-outline-info mb-2 bd-highlight ml-3">Create Event</button>
            </nav>

            <div class="container d-flex justify-content-center" style="background-color: white; z-index: -1">
                <div class="col">
                    @for (int i = 0; i < 8; i++)
                    {
                        @await Html.PartialAsync($"_EventDescriptionPartial")
                    }
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">

                        <div class="modal-header d-flex justify-content-center">
                            <div class="form-group" style="width: 20rem">
                                <input type="text" class="form-control" id="eventName" aria-describedby="eventNameInput" placeholder="Enter the event's name" />
                            </div>
                            @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>*@
                        </div>

                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="eventLocation">Location</label>
                                    <input type="text" class="form-control" id="eventLocation" aria-describedby="eventLocationInput" placeholder="Enter the event's location" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Example select</label>
                                    <select class="form-control" id="exampleFormControlSelect1">
                                        <option>Football</option>
                                        <option>Table Tennis</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlTextarea1">Example textarea</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                </div>
                            </form>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Create Event</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

