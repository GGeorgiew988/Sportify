@{
    ViewData["Title"] = "Profile";
    Layout = null;

    string[] sports = new string[]
    {
"Basketball",
"Table Tennis",
"Football",
"Tennis",
"Badminton",
"Chess"
    };
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body style="background-color: whitesmoke;">
    <!-- NavBar -->
    @await Html.PartialAsync("_NavBarPartial")

    <!-- Profile -->
    <table align="center" class="user">
        <tr>
            <td>
                <img width="200" height="200" src="http://icons.iconarchive.com/icons/graphicloads/flat-finance/128/person-icon.png" />
            </td>
        </tr>
        <tr>
            <td>
                USER
            </td>
        </tr>
        <tr>
            <td>
                Location
            </td>
        </tr>
    </table>

    <!-- Score Chart -->
    <table class="score_chart" align="left">
        <tr>
            <td>
                <select name="sports1" size="1" style="width:600px">
                    @for (int i = 0; i < sports.Length; i++)
                    {
                        if (i == 0)
                        {
                            <option value="blank">-</option>
                            <option>@sports[i]</option>
                        }
                        else
                        {
                            <option>@sports[i]</option>
                        }
                    }
                </select>
            </td>
            <td>
                Average Score <img width="20" height="20" src="http://icons.iconarchive.com/icons/paomedia/small-n-flat/128/star-icon.png" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @await Html.PartialAsync("_UserScoreChart")
            </td>
        </tr>
    </table>

    <!-- Pick Sport -->
    <div class="container-fluid" style="margin-top: 100px">
        <div class="row">
            <select name="sports2" size="1" class="mb-3 ml-1 mr-1" style="width:100%">
                @for (int i = 0; i < sports.Length; i++)
                {
                    if (i == 0)
                    {
                        <option value="blank">-</option>
                        <option>@sports[i]</option>
                    }
                    else
                    {
                        <option>@sports[i]</option>
                    }
                }
            </select>
        </div>
        <div class="row">
            <div class="col sport pr-0 pl-1">
                <span class="float-left">@sports[0]</span>
                <span class="float-right mt-1 mr-0">
                    <button class="sport_btn" type="button"><img width="25" height="25" src="http://icons.iconarchive.com/icons/awicons/vista-artistic/128/delete-icon.png" /></button>
                </span>
            </div>
            <div class="col sport pr-0 pl-1">
                <span class="float-left">@sports[1]</span>
                <span class="float-right mt-1 mr-0">
                    <button class="sport_btn" type="button"><img width="25" height="25" src="http://icons.iconarchive.com/icons/awicons/vista-artistic/128/delete-icon.png" /></button>
                </span>
            </div>
            <div class="col sport pr-0 pl-1">
                <span class="float-left">@sports[2]</span>
                <span class="float-right mt-1 mr-0">
                    <button class="sport_btn" type="button"><img width="25" height="25" src="http://icons.iconarchive.com/icons/awicons/vista-artistic/128/delete-icon.png" /></button>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col sport pr-0 pl-1">
                <span class="float-left">@sports[3]</span>
                <span class="float-right mt-1 mr-0">
                    <button class="sport_btn" type="button"><img width="25" height="25" src="http://icons.iconarchive.com/icons/awicons/vista-artistic/128/delete-icon.png" /></button>
                </span>
            </div>
            <div class="col sport pr-0 pl-1">
                <span class="float-left">@sports[4]</span>
                <span class="float-right mt-1 mr-0">
                    <button class="sport_btn" type="button"><img width="25" height="25" src="http://icons.iconarchive.com/icons/awicons/vista-artistic/128/delete-icon.png" /></button>
                </span>
            </div>
            <div class="col sport pr-0 pl-1">
                <span class="float-left">@sports[5]</span>
                <span class="float-right mt-1 mr-0">
                    <button class="sport_btn" type="button"><img width="25" height="25" src="http://icons.iconarchive.com/icons/awicons/vista-artistic/128/delete-icon.png" /></button>
                </span>
            </div>
        </div>
    </div>
</body>

<style>
    .body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    }

    .sport {
        font-size: 25px;
        background-color: darkblue;
        color: white;
        margin-right: 5px;
        margin-left: 5px;
        margin-bottom: 5px;
        border-radius: 5px;
    }

    .user {
        text-align: center;
    }

    .score_chart {
        text-align: center;
        width: 800px;
        margin-top: 100px;
        margin-bottom: 5px;
        margin-left: 210px;
    }

    .pick_sport {
        text-align: center;
        margin-top: 100px;
        margin-bottom: 70px;
    }

    .sport_btn {
        border: none;
        background-color: darkblue;
    }
</style>